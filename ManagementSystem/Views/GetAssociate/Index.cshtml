@model IEnumerable<ManagementSystem.Models.AssociateDetail>

@{
    ViewBag.Title = "Index";
}


<style>
    td, th {
        text-align: center;
    }
</style>

<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NTT Data Talent Development Team", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dashboard", "About", "Home")</li>
                    <li>@Html.ActionLink("Reports", "Contact", "Home")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
</div>

<h2>Associates Report</h2>
<br />
@using (Html.BeginForm("Index", "GetAssociate", FormMethod.Get))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Show based on Location", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("searchloc", "", new { htmlAttributes = new { @class = "form-control" } })
                <input type="submit" value="Location"  />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Show based on Training Module ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("searchtid", "", new { htmlAttributes = new { @class = "form-control" } })
                <input type="submit" value="Training Module ID" />
            </div>
        </div>
    </div>


    <table class="table">
        <tr>
            <th>
                Associate ID
            </th>
            <th>
                Associate Name
            </th>
            <th>
                Training Module ID
            </th>
            <th>
                Date of Joining
            </th>
            <th>
                Location
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.associate_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.associate_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BatchDetail.training_module_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.doj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.loc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
            </tr>
        }

    </table>

}