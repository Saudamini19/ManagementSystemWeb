@model  IEnumerable<ManagementSystem.Models.TrainerDetail>

@{
    ViewBag.Title = "Index";
}

<style>
    th, td {
        text-align: center;
    }
</style>
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NTT Data Talent Development Team", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dashboard", "About", "Home")</li>
                    <li>@Html.ActionLink("Reports", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Logout", "LogOff", "Home")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
</div>


<h2>Trainer Report</h2>


@using (Html.BeginForm("Index", "GetBatch", FormMethod.Get))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <i>The table below shows the details of trainers with currently unassigned batches</i>
            <br />
        </div>
    </div>

    <table class="table">
        <tr>
            <th>
                Trainer ID
            </th>
            <th>
                Trainer Name
            </th>
            <th>
                Business Unit ID
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.trainer_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.trainer_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.business_unit_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
            </tr>
        }

    </table>
}
