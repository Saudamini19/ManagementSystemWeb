@model  IEnumerable<ManagementSystem.Models.AllDetail>

@{
    ViewBag.Title = "Index";
}

<style>
    td, th {
        text-align: center;
    }
</style>

<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NTT Data Talent Development Team", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dashboard", "About", "Home")</li>
                    <li>@Html.ActionLink("Reports", "Contact", "Home")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
</div>

<h2>Batch Report</h2>
<br />
@using (Html.BeginForm("Index", "GetBatch", FormMethod.Get))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Show based on Business Unit Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("searchbnam", "", new { htmlAttributes = new { @class = "form-control" } })
                <input type="submit" value="Show" />
            </div>
        </div>
    </div>
    <table class="table">
        <tr>
            <th>
                Associate ID
            </th>
            <th>
                Associate Name
            </th>
            <th>
                Training Module ID
            </th>
            <th>
                Date of Joining
            </th>
            <th>
                Location
            </th>
            <th>
                Business Unit Name
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.associate_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.associate_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.associate_training_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.doj_associate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.associate_loc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.business_unit_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.startdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.enddate)
        </td>
    </tr>
        }

    </table>

}

